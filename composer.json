{
  "name": "drdplus/rules-skeleton",
  "license": "MIT",
  "type": "composer-plugin",
  "description": "Skeleton for DrD+ rules as HTML",
  "keywords": [
    "drd plus",
    "rules",
    "helper",
    "skeleton"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "ext-curl": "*",
    "ext-dom": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-posix": "*",
    "ext-yaml": "*",
    "ext-zlib": "*",
    "composer-plugin-api": "^1.0",
    "drdplus/rules-skeleton-web": "dev-master",
    "erusev/parsedown": "^1.7",
    "granam/exceptions-hierarchy": "^4.0",
    "granam/strict-object": "^3.0",
    "granam/string": "^3.2",
    "granam/tools": "^3.0",
    "granam/yaml-reader": "^1.0",
    "mockery/mockery": "^1.1",
    "phpgt/dom": "~1.0",
    "phpmailer/phpmailer": "^6.0",
    "phpunit/phpunit": "~7.0",
    "piwik/device-detector": "^3.9",
    "tracy/tracy": "^2.4"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "composer/composer": "^1.7"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  },
  "extra": {
    "class": "DrdPlus\\RulesSkeleton\\SkeletonInjectorComposerPlugin"
  },
  "scripts": {
    "post-update-cmd": [
      "php bin/assets --css --dir=css"
    ],
    "post-install-cmd": [
      "php bin/assets --css --dir=css"
    ]
  }
}
